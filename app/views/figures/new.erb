<h1>Create New Figure!</h1>
<form action="/figures" method="post">
  <label>Name: <input type="text" name="figure[name]" id="figure_name"></label><br>
  <p>Choose Titles:</p>
  <% @titles.each do |title| %>
    <label><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%= title.name %></label><br>
  <% end %>

  <p>Choose Landmarks:</p>
  <% @landmarks.each do |landmark| %>
    <label><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><%= landmark.name %></label><br>
  <% end %>

  <p>And/Or Create a new Title:</p>
  <input type="text" name="title[name]" id="new_title">

  <p>And/Or Create a new Landmark:</p>
  <input type="text" name="landmark[name]" id="new_landmark"><br>

  <br><input type="submit" name="submit" value="Create" id="Create New Figure">
</form>
